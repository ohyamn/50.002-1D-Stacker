module alu_shift (
    input x[16],
    input y[4],
    input alufn[2],
    output shif[16]
  ) {
  
  sig xNew[16];
  sig shift_mid[16];
  how_to_paddle paddle;
  var i;
  
  always{
  
    shif = 16b0;                        //initialise shif
  
    case(alufn[0]){
    b0:
      xNew=x;
    b1:
      for(i=0;i<16;i++){
        xNew[i]=x[15-i];               //invert x
      }
    default: 
      xNew=x;
     }
  
    paddle.x=xNew;                     //assign inputs to how_to_paddle module
    paddle.b=y;
    paddle.alufn=alufn[1];
    shift_mid=paddle.shift_paddle;     //assign output from how_to_paddle module
 
    case(alufn[0]){
    b0:
      shif=shift_mid;                  
    b1:
      for(i=0;i<16;i++){
        shif[i]=shift_mid[15-i];       //invert shift_mid
    }
  }
}